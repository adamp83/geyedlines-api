<h2>Custom Prompts Dashboard</h2>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Create New Prompt</h3>
  </div>

  <div class="panel-body">



      When you say the given keyword, Glass will show you your prompt
      <br/><br/>
      <%= form_for UserPrompt.new do |f| %>
        <div class="row">
          <div class="col-md-2">
            <b>Keyword</b>
          </div>
          <div class="col-md-10">
            <%= f.text_field :keyword, class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <b>Prompt</b>
          </div>
          <div class="col-md-10">
            <%= f.text_field :body, class: 'form-control' %>
          </div>
        </div>
        <div class="text-right">
          <%= f.submit "Save Prompt", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>


</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>My Prompts</h3>
  </div>

  <div class="panel-body">
    <% if @user_prompts.empty? %>
      You have not defined any prompts yet
    <% end %>
    <ul>
      <% @user_prompts.each do |user_prompt| %>
        <li style="clear:both;">
          <div class="pull-right">
            <%= link_to "X", user_prompt_path(user_prompt), method: :delete, confirm: 'Delete this prompt?' %>
          </div>
          <b><%= user_prompt.keyword %></b>
          &rarr;
          <%= user_prompt.body %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
